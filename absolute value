/*
  Q.1 : Make a funcation name update which perform following calculation. 
  
      INPUT :
      two integer input 
      a = 4;
      b = 5;
      
      output :
      a = a + b;
      b = |a -b |; // this is absolute value.
      
      hence,
      a = 9;
      b = 1;
      

*/
#include <stdio.h>

void update(int a, int b)
{
    int c;
     c=a+b;
     b=(a-b);
     if(b<0)
        {
     	b=b*(-1);
     	}
     printf("A=%d\n",c);
     printf("B=%d",b);
     
}

int main()
{
	int x,y;
	printf("ENTER Two NUMBERS\n");
	scanf("%d%d",&x,&y);
        update(x,y);

}

#include <stdio.h>

void update(int a, int b)
{
    int c;
     c=a+b;
     b=(a-b);
     if(b<=0)
        {
     	b=b*(-1);
     	}
     printf("A=%d\n",c);
     printf("B=%d",b);
     
}

int main()
{
	int x,y;
	printf("ENTER Two NUMBERS\n");
	scanf("%d%d",&x,&y);
    update(x,y);

}
